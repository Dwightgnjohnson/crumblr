<h2>
  <div class="pull-right">
    <%= form_for(Heart.new) do |f| %>
      <%= f.hidden_field :post_id, value: post.id %>
      <%= f.submit "♥", class: "btn btn-danger" %>
    <%end%>
  </div>

  <%= link_to post.title, post %>

</h2>

<p>
  <% if post.kind == 'image'%>
    <%= image_tag post.content, style: "max-width:100%;" %>
  <% else %>
    <%= simple_format post.content %>
  <% end %>
</p>

<small class="text-muted"><strong>Updated at: </strong><%= post.updated_at.to_formatted_s(:short) %> | <strong>Posted on: </strong><%= post.created_at.to_formatted_s(:long) %></small>


<small class="text-muted pull-right"><%= post.hearts.count %> ♥</small>
